<!DOCTYPE html>
<html>
  <head>
    <title>Tocode</title>
    <%= csrf_meta_tags %>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container">
      <header id="header"><%= render 'layouts/navigation' %></header>
      <main id="main"><%= render 'layouts/sidebar' %></main>
      <footer id="footer"><%= render 'layouts/footer' %></footer>
    </div>
    <%= yield %>
  </body>
</html>
